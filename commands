sudo service datadog-agent restart
sudo usermod -a -G docker dd-agent
sudo nano /etc/datadog-agent/conf.d/docker.d/conf.yaml.default
instances:

  - url: "unix://var/run/docker.sock"
    new_tag_names: true

sudo nano /etc/datadog-agent/datadog.yaml
logs_enabled: true
listeners:
    - name: docker
config_providers:
    - name: docker
      polling: true
logs_config:
    container_collect_all: true



aws iam create-role --role-name CWLtoKinesisRoleEUS1 --assume-role-policy-document file://~/TrustPolicyForCWL.json

aws iam put-role-policy  --role-name CWLtoKinesisRoleEUS1 --policy-name Permissions-Policy-For-CWL  --policy-document file://~/PermissionsForCWL.json

aws logs put-subscription-filter --log-group-name "/ecs/dashboard-mainnet-backend" --filter-name "DDFilter" --filter-pattern "" --destination-arn "arn:aws:firehose:eu-west-1:059424750518:deliverystream/EcsLogsTodataDog" --role-arn "arn:aws:iam::059424750518:role/CWLtoKinesisRoleEUW1" --region eu-west-1